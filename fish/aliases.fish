# ls aliases
alias l="ls -CF"
alias la="ls -CFA"
alias laa="ls -CFa"
alias ll="ls -lA"
alias lla="ls -la"

# pacman aliases
alias pacrm="sudo pacman -Qtdq | sudo pacman -Rns -"
alias pacu="sudo pacman -Syu --needed"
alias pacs="sudo pacman -S --needed"
alias pacr="sudo pacman -R "

# shutdown aliases
alias dobranoc="echo 'dobranoc Maciek' ; shutdown now"
